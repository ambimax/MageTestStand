{
  "name": "MageTestStand",
  "description": "This tool is used to build a minimal Magento environment that allows to run PHPUnit tests for a Magento module on Travis CI",
  "minimum-stability": "dev",
  "require": {
    "aoepeople/composer-installers": "*",
    "ecomdev/ecomdev_phpunit": "dev-dev",
    "ambimax/coding-standards": "v1.*",
    "ambimax/magento-deployscripts": "1.2.*"
  },
  "config": {
    "bin-dir": "bin"
  },
  "repositories": [
        {
            "type": "composer",
            "url": "https://packages.firegento.com"
        },
        {
            "type": "vcs",
            "url": "https://github.com/AOEpeople/EcomDev_PHPUnit.git"
        }
    ]
}
